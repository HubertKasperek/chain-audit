{
  "name": "chain-audit",
  "version": "0.6.6",
  "description": "Zero-dependency heuristic scanner CLI to detect supply chain attacks in node_modules. Detects malicious install scripts, network access, env exfiltration, lockfile integrity, obfuscated code, and suspicious patterns. Works fully offline.",
  "main": "src/index.js",
  "bin": {
    "chain-audit": "src/index.js"
  },
  "exports": {
    ".": "./src/index.js",
    "./analyzer": "./src/analyzer.js",
    "./collector": "./src/collector.js",
    "./lockfile": "./src/lockfile.js"
  },
  "files": [
    "src/**/*.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/index.js",
    "scan": "node src/index.js",
    "scan:json": "node src/index.js --json",
    "scan:sarif": "node src/index.js --sarif",
    "scan:deep": "node src/index.js --scan-code",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "node --test test/*.test.js",
    "prepublishOnly": "npm run lint"
  },
  "keywords": [
    "security",
    "supply-chain",
    "dependency",
    "heuristic-scanner",
    "lockfile",
    "obfuscation",
    "static-analysis",
    "ci"
  ],
  "author": "Hubert Kasperek",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hukasx0/chain-audit.git"
  },
  "bugs": {
    "url": "https://github.com/hukasx0/chain-audit/issues"
  },
  "homepage": "https://github.com/hukasx0/chain-audit#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "9.39.2"
  }
}
